<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context="com.only.yc.only_onez.UserBirthday">
    <android.support.v7.widget.Toolbar
        android:id="@+id/UserBirthday_Toolbar"
        android:layout_width="match_parent"
        android:background="#fcf9db"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/UserBirthday_Button_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fcf9db"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="OK"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/UserBirthday_Show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="30dp"
            android:background="#abe2dd"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/UserBirthday_Year"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="年"
                tools:ignore="HardcodedText,RtlHardcoded" />
        <Spinner
            android:id="@+id/UserBirthday_Month"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="月"
                tools:ignore="HardcodedText,RtlHardcoded" />
        <Spinner
            android:id="@+id/UserBirthday_Day"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="日"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
